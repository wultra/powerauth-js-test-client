{
  "compilerOptions": {
    "module": "ES6",
    "noImplicitAny": false,
    "removeComments": false,
    "declaration": true,
    "target": "ES6",
    "skipLibCheck": true,
    "lib": ["ES2016"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "exclude": [ "node_modules" ],
  "include": [ "src/**/*.ts" ]
}